
<h1 class="text-center mt-4"> Listing all Users </h1>

<div class="container mt-3">
    <% @users.each do |user| %>
    <div class="row justify-content-md-center">
        <div class="col-7">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <%= link_to  "", user_path(user.id), class:"stretched-link" %>
                <div class="card-header font-italic">
                    by <%= user.username %>
                </div>
                <div class="card-body mt-4 mb-5">
                    <h5 class="card-title"><%= user.username%></h5>
                </div>
                <div class="card-footer text-muted">
                    <small>Created <%= time_ago_in_words(user.created_at) %> ago, edited <%= time_ago_in_words(user.updated_at) %></small>
                </div>
            </div>
        </div>
    </div>

    <% end %>
</div>
