<div class="row justify-content-center">
        <h1 class="text-center mt-4 "> Edit your profile</h1>
</div>

<div class="row justify-content-center">
    <% if logged_in? && !current_user.admin? %>
        <%= link_to  "Delete Account", user_path(current_user),class:"btn btn-dark btn-sm mb-3 text-warning", method: :delete, data: {confirm:"Are you sure?"} %>
    
    <% elsif logged_in? && current_user.admin? %>
        <%= link_to "Delete Account", user_path(@user),class:"btn btn-dark btn-sm mb-3 text-warning", method: :delete, data: {confirm:"Are you sure?"} %>
    <%end%>
   
</div>


<%= render 'form'%>




