<h1 class="text-center mt-4"> Create a new category </h1>

<div class="container">
    <%= render 'shared/errors', obj: @category %>
</div>


<div class="container article-container  shadow mb-2 bg-white rounded">

    <%# model: @article, local: true to display existing article%>
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(model: @category, local: true) do |f| %>
                <div class="form-group row mt-3">
                    <%=f.label :name, "Category name", class:"col-2 col-form-label" %>
                    <%=f.text_field :name, class:"col-10 form-control" , placeholder: "Enter a category name"%>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit class:"btn btn-outline-dark btn-lg " %>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit class:"btn btn-outline-dark btn-lg ", :type, :src =>  %>
                </div>
            <% end %>
        </div>

    </div>

</div>

<div class="row justify-content-center mb-5 mt-3">
    <%= link_to  "[ Cancel and return to articles listing ]", articles_path, style: 'color:#808080' %> 
</div>



